<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/sobot_demo_layout_titlebar" />

    <EditText
        android:id="@+id/sobot_api_host"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:background="@color/sobot_btn_text_color"
        android:hint="请输入域名(必须)"
        android:inputType="text"
        android:paddingLeft="16sp"
        android:text=""
        android:textColor="@color/sobot_edittext_text_color"
        android:textColorHint="#888888"
        android:visibility="gone"
        android:paddingStart="16sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:background="@color/sobot_btn_text_color"
        android:gravity="center_vertical"
        android:paddingLeft="16sp"
        android:text="Appkey"
        android:textColor="@color/sobot_edittext_text_color"
        android:textColorHint="#888888"
        android:paddingStart="16sp" />

    <EditText
        android:id="@+id/sobot_demo_appkey"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:background="@color/sobot_btn_text_color"
        android:hint="请输入appkey(必须)"
        android:inputType="text"
        android:paddingLeft="16sp"
        android:text=""
        android:textColor="@color/sobot_edittext_text_color"
        android:textColorHint="#888888"
        android:paddingStart="16sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:background="@color/sobot_btn_text_color"
        android:gravity="center_vertical"
        android:paddingLeft="16sp"
        android:text="partnerId"
        android:textColor="@color/sobot_edittext_text_color"
        android:textColorHint="#888888"
        android:paddingStart="16sp" />

    <EditText
        android:id="@+id/sobot_partnerId"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/sobot_appkey"
        android:background="@color/sobot_btn_text_color"
        android:hint="请输入partnerId(用户唯一标识，建议必填)"
        android:inputType="text"
        android:paddingLeft="16sp"
        android:textColor="@color/sobot_edittext_text_color"
        android:textColorHint="#888888"
        android:visibility="visible"
        android:paddingStart="16sp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:background="@color/sobot_btn_text_color"
        android:gravity="center_vertical"
        android:paddingLeft="16sp"
        android:text="设置热点问题"
        android:textColor="@color/sobot_edittext_text_color"
        android:textColorHint="#888888"
        android:paddingStart="16sp" />

    <EditText
        android:id="@+id/ed_hot_question"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:background="@color/sobot_btn_text_color"
        android:hint="热点问题设置"
        android:textColor="@color/sobot_edittext_text_color"
        android:textColorHint="#888888"
        android:layout_marginStart="10dp" />

    <RelativeLayout
        android:id="@+id/rl_"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/sobot_demo_item_setting_selector"
        android:paddingTop="@dimen/sobot_list_item_padding_top"
        android:paddingBottom="@dimen/sobot_list_item_padding_top">

        <TextView
            style="@style/TxtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/sobot_demo_item_setting_selector"
            android:gravity="center"
            android:text="用户资料设置"
            android:layout_marginStart="10dp" />

        <ImageView
            android:id="@+id/img_pc_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/sobot_arrow_icon"
            android:contentDescription="@null"
            android:layout_marginEnd="15dp"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.1dip"
        android:layout_marginLeft="15dp"
        android:background="@color/sobot_demo_line_1dp"
        android:layout_marginStart="15dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <EditText
            android:id="@+id/key1"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@color/sobot_btn_text_color"
            android:hint="请输入"
            android:textColor="@color/sobot_edittext_text_color"
            android:textColorHint="#888888"
            android:layout_marginStart="10dp" />

        <EditText
            android:id="@+id/value1"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@color/sobot_btn_text_color"
            android:hint="请输入"
            android:textColor="@color/sobot_edittext_text_color"
            android:textColorHint="#888888"
            android:layout_marginStart="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <EditText
            android:id="@+id/key2"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@color/sobot_btn_text_color"
            android:hint="请输入"
            android:textColor="@color/sobot_edittext_text_color"
            android:textColorHint="#888888"
            android:layout_marginStart="10dp" />

        <EditText
            android:id="@+id/value2"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@color/sobot_btn_text_color"
            android:hint="请输入"
            android:textColor="@color/sobot_edittext_text_color"
            android:textColorHint="#888888"
            android:layout_marginStart="10dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <EditText
            android:id="@+id/key3"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@color/sobot_btn_text_color"
            android:hint="请输入"
            android:textColor="@color/sobot_edittext_text_color"
            android:textColorHint="#888888"
            android:layout_marginStart="10dp" />

        <EditText
            android:id="@+id/value3"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@color/sobot_btn_text_color"
            android:hint="请输入"
            android:textColor="@color/sobot_edittext_text_color"
            android:textColorHint="#888888"
            android:layout_marginStart="10dp" />

    </LinearLayout>

    <EditText
        android:id="@+id/et_sobot_custom_language"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/sobot_appkey"
        android:layout_marginTop="20dp"
        android:background="@color/sobot_btn_text_color"
        android:hint="可输入指定国际化语言,例如 en、zh_rtw"
        android:inputType="text"
        android:paddingLeft="16sp"
        android:textColor="@color/sobot_edittext_text_color"
        android:textColorHint="#888888"
        android:visibility="visible"
        android:paddingStart="16sp" />
</LinearLayout>